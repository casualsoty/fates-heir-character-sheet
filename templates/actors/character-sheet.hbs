<link href="modules/fates-heir-character-sheet/styles/style.css"
      rel="stylesheet"
      type="text/css">
<form autocomplete="off"
      class="{{cssClass}}">
  <div class="fhcs-background-image">
    {{!-- img --}}
    <img class="fhcs-img position-absolute"
         data-edit="img"
         data-tooltip="{{actor.name}}"
         src="{{actor.img}}">

    {{!-- name --}}
    <input class="fhcs-name height28px position-absolute text"
           data-tooltip="{{localize 'FHCS.Name'}}"
           name="name"
           type="text"
           value="{{actor.name}}">

    {{!-- level --}}
    <input class="fhcs-level height28px position-absolute text"
           data-tooltip="FHCS.Level"
           type="number"
           value="{{actor.flags.fates-heir-character-sheet.level}}">

    {{!-- player-name --}}
    <input class="fhcs-player-name height28px position-absolute text"
           data-tooltip="FHCS.PlayerName"
           type="text"
           value="{{actor.flags.fates-heir-character-sheet.player-name}}">

    {{!-- hp-value --}}
    <input class="fhcs-hp-value height28px position-absolute text text-align-center width30px"
           data-dtype="Number"
           data-tooltip="FHCS.HitPointsCurrent"
           max="{{getHpMax actor.flags.fates-heir-character-sheet.level}}"
           name="system.attributes.hp.value"
           type="number"
           value="{{system.attributes.hp.value}}">

    {{!-- hp-max --}}
    <div class="fhcs-hp-max height28px position-absolute text text-align-center width30px"
         data-tooltip="FHCS.HitPointsMax">{{getHpMax actor.flags.fates-heir-character-sheet.level}}</div>

    {{!-- cp --}}
    <input class="fhcs-cp height28px position-absolute text text-align-center width30px"
           data-dtype="Number"
           data-tooltip="FHCS.Copper"
           name="system.currency.cp"
           type="text"
           value="{{system.currency.cp}}">

    {{!-- sp --}}
    <input class="fhcs-sp height28px position-absolute text text-align-center width30px"
           data-dtype="Number"
           data-tooltip="FHCS.Silver"
           name="system.currency.sp"
           type="text"
           value="{{system.currency.sp}}">

    {{!-- gp --}}
    <input class="fhcs-gp height28px position-absolute text text-align-center width30px"
           data-dtype="Number"
           data-tooltip="FHCS.Gold"
           name="system.currency.gp"
           type="text"
           value="{{system.currency.gp}}">

    {{!-- inventory --}}
    <div class="fhcs-inventory flexcol inventory position-absolute">
      {{> 'fates-heir-character-sheet.inventory' sections=inventory}}
    </div>

    {{!-- signature-power --}}
    <textarea class="fhcs-signature-power position-absolute text text-align-center"
              data-tooltip="FHCS.SignaturePower">{{actor.flags.fates-heir-character-sheet.signature-power}}</textarea>

    {{!-- skill-1 --}}
    <div class="fhcs-skill-1 height23px position-absolute text width125px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-1
        skill-id=1}}
    </div>

    {{!-- skill-2 --}}
    <div class="fhcs-skill-2 height23px position-absolute text width125px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-2
        skill-id=2}}
    </div>

    {{!-- skill-3 --}}
    <div class="fhcs-skill-3 height23px position-absolute text width125px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-3
        skill-id=3}}
    </div>

    {{!-- skill-4 --}}
    <div class="fhcs-skill-4 height23px position-absolute text width125px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-4
        skill-id=4}}
    </div>

    {{!-- skill-5 --}}
    <div class="fhcs-skill-5 height23px position-absolute text width125px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-5
        skill-id=5}}
    </div>

    {{!-- skill-6 --}}
    <div class="fhcs-skill-6 height23px position-absolute text width122px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-6
        skill-id=6}}
    </div>

    {{!-- skill-7 --}}
    <div class="fhcs-skill-7 height23px position-absolute text width122px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-7
        skill-id=7}}
    </div>

    {{!-- skill-8 --}}
    <div class="fhcs-skill-8 height23px position-absolute text width122px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-8
        skill-id=8}}
    </div>

    {{!-- skill-9 --}}
    <div class="fhcs-skill-9 height23px position-absolute text width122px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-9
        skill-id=9}}
    </div>

    {{!-- skill-10 --}}
    <div class="fhcs-skill-10 height23px position-absolute text width122px">
      {{> 'fates-heir-character-sheet.skill'
        skill-flag=actor.flags.fates-heir-character-sheet.skill-10
        skill-id=10}}
    </div>

    {{!-- power-1 --}}
    <div class="display-flex fhcs-power-1 height21px position-absolute text width236px">
      {{> 'fates-heir-character-sheet.power'
        power-id=1
        power-invocation-flag=actor.flags.fates-heir-character-sheet.power-invocation-1
        power-level-flag=actor.flags.fates-heir-character-sheet.power-level-1
        power-name-flag=actor.flags.fates-heir-character-sheet.power-name-1
        powers=powers}}
    </div>

    {{!-- power-2 --}}
    <div class="display-flex fhcs-power-2 height21px position-absolute text width236px">
      {{> 'fates-heir-character-sheet.power'
        power-id=2
        power-invocation-flag=actor.flags.fates-heir-character-sheet.power-invocation-2
        power-level-flag=actor.flags.fates-heir-character-sheet.power-level-2
        power-name-flag=actor.flags.fates-heir-character-sheet.power-name-2
        powers=powers}}
    </div>

    {{!-- power-3 --}}
    <div class="display-flex fhcs-power-3 height21px position-absolute text width236px">
      {{> 'fates-heir-character-sheet.power'
        power-id=3
        power-invocation-flag=actor.flags.fates-heir-character-sheet.power-invocation-3
        power-level-flag=actor.flags.fates-heir-character-sheet.power-level-3
        power-name-flag=actor.flags.fates-heir-character-sheet.power-name-3
        powers=powers}}
    </div>

    {{!-- power-4 --}}
    <div class="display-flex fhcs-power-4 height21px position-absolute text width236px">
      {{> 'fates-heir-character-sheet.power'
        power-id=4
        power-invocation-flag=actor.flags.fates-heir-character-sheet.power-invocation-4
        power-level-flag=actor.flags.fates-heir-character-sheet.power-level-4
        power-name-flag=actor.flags.fates-heir-character-sheet.power-name-4
        powers=powers}}
    </div>

    {{!-- power-5 --}}
    <div class="display-flex fhcs-power-5 height21px position-absolute text width236px">
      {{> 'fates-heir-character-sheet.power'
        power-id=5
        power-invocation-flag=actor.flags.fates-heir-character-sheet.power-invocation-5
        power-level-flag=actor.flags.fates-heir-character-sheet.power-level-5
        power-name-flag=actor.flags.fates-heir-character-sheet.power-name-5
        powers=powers}}
    </div>
  </div>
</form>
