<form>
  <div class="form-group">
    <label>
      {{localize 'DND5E.Formula'}}
    </label>
    <input disabled
           name="formula"
           type="text"
           value="1d100 + @powerLevel * 5 + @bonus">
  </div>

  <div class="form-group">
    <label>
      {{localize 'DND5E.RollSituationalBonus'}}
    </label>
    <input name="bonus"
           placeholder="{{localize 'DND5E.RollExample'}}"
           type="text"
           value="">
  </div>

  <div class="form-group">
    <label>{{localize 'DND5E.RollMode'}}</label>
    <select name="rollMode">
      {{selectOptions rollModes localize=true selected=defaultRollMode}}
    </select>
  </div>
</form>
